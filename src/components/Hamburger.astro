<style>
  .hamburger {
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--ctp-latte-surface0);
    border-radius: 20%;
    width: 40px;
    height: 40px;
  }
  .hamburger:active {
    background: var(--ctp-latte-mauve);
    border-radius: 20%;
  }

  .hamburger svg {
    fill: var(--ctp-latte-lavender);
    color: var(--ctp-latte-lavender);
    pointer-events: none;
  }
  .hamburger path {
    pointer-events: none;
  }

  .dropdown {
    display: none;
  }

  .dropdown-visible {
    inset: 0px 0px auto auto;
    transform: translate3d(-8px, 56px, 0px);
    display: flex;
    min-width: 100px;
    position: fixed;
    flex-direction: column;
    align-items: flex-start;
    border-radius: 10%;
    gap: 5px;
    box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
    background-color: var(--ctp-latte-crust);
    z-index: 2;
  }

  .dropdown-visible a {
    padding-left: 10px;
    padding-bottom: 5px;
    padding-top: 5px;
    opacity: 1;
  }

  @media screen and (min-width: 636px) {
    .hamburger {
      display: none;
    }
    .dropdown {
      display: none;
    }
  }
</style>

